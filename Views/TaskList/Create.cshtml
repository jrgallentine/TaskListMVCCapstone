@model ToDoItems

<form method="post" asp-action="Create">

    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Add Item</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="ItemDescription"></label>
                    </div>
                    <div class="col-4">
                        <label asp-for="DueDate"></label>
                    </div>

                    <div class="col-3">
                        <label asp-for="AssignedEmployee"></label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <input asp-for="ItemDescription" class="form-control" />
                        <span asp-validation-for="ItemDescription" class="text-danger"></span>
                    </div>
                    <div class="col-4">
                        <input asp-for="DueDate" class="form-control" />
                        <span asp-validation-for="DueDate" class="text-danger"></span>

                    </div>

                    <div class="col-3">
                        <input asp-for="AssignedEmployee" class="form-control" />
                        <span asp-validation-for="AssignedEmployee" class="text-danger"></span>

                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-75" value="Create" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-danger w-75">Back</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>