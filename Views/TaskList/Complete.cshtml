@model ToDoItems

<form method="post" asp-action="Complete">
    <input asp-for="Id" hidden />

    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Mark Complete</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="ItemDescription"></label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <input asp-for="ItemDescription" class="form-control" value="@Model.ItemDescription" />
                        <span asp-validation-for="ItemDescription" class="text-danger"></span>
                    </div>
                    <div class="col-4">
                        <input asp-for="DueDate" class="form-control" value="@Model.DueDate" hidden/>
                        <span asp-validation-for="DueDate" class="text-danger"></span>

                    </div>
                    <div class="col-4">
                        <input asp-for="Progress" class="form-control" value="true" hidden/>
                        <span asp-validation-for="Progress" class="text-danger"></span>

                    </div>
                    <div class="col-4">
                        <input asp-for="AssignedEmployee" class="form-control" value="@Model.AssignedEmployee" hidden/>
                        <span asp-validation-for="AssignedEmployee" class="text-danger"></span>

                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-75" value="Mark Complete" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-danger w-75">Back</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>